import Navigation from "../components/Navigation.astro";

const { title, color } = Astro.props;
// console.log(title);

---

<!-- 
⭐️TODO headもコンポーネント化して動的にする。astro-seoを使う
				→ https://zenn.dev/h_ymt/scraps/104995ef750f48
